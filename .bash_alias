# Functions as Alias

cpp() {
	g++ $1 && ./a.out
}

cgo() {
	cc $1 && ./a.out
}

clex() {
	lex $1 && gcc lex.yy.cc -ll && ./a.out
}

# https://gist.github.com/mihow/9c7f559807069a03e302605691f85572
envup() {
  local file=$1

  if [ -f $file ]; then
    set -a
    source $file
    set +a
  else
    echo "No $file file found" 1>&2
    return 1
  fi
}

